<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/pokemonNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokemon Name (Species)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/totalBattlesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Battles: 0"/>

        <TextView
            android:id="@+id/winsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins: 0"/>

        <TextView
            android:id="@+id/lossesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Losses: 0"/>

        <TextView
            android:id="@+id/winRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win Rate: N/A"/>

        <TextView
            android:id="@+id/trainingDaysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training Days: 0"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
